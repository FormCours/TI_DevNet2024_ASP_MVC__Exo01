@{
    ViewData["Title"] = "Me contacter";
}

<h1 class="display-4">Contact...</h1>

<form method="POST">
    <div class="form-group">
        <label for="input-email">Courriel</label>
        <input type="email" class="form-control" id="input-email" aria-describedby="help-email" name="email" placeholder="della.duck@techni.be">
        <small id="help-email" class="form-text text-muted">C'est un truc avec un « @@ » dedans.</small>
    </div>
    <div class="form-group">
        <label for="input-pseudo">Pseudo</label>
        <input type="text" class="form-control" id="input-pseudo" name="pseudo" placeholder="Della">
    </div>
    <div class="form-group">
        <label for="input-message">Message</label>
        <textarea class="form-control" id="input-message" name="message" placeholder="Votre message ici!"></textarea>
    </div>
    <button type="submit" class="btn btn-danger">Submit</button>
</form>